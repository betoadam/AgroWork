@model AgroWork.Models.Inseminacao

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Inseminacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutorId" class="control-label"></label>
                <select asp-for="ProdutorId" class ="form-control" asp-items="ViewBag.ProdutorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VacaId" class="control-label"></label>
                <select asp-for="VacaId" class ="form-control" asp-items="ViewBag.VacaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InseminadorId" class="control-label"></label>
                <select asp-for="InseminadorId" class ="form-control" asp-items="ViewBag.InseminadorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" type="datetime-local" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Touro" class="control-label"></label>
                <input asp-for="Touro" class="form-control" />
                <span asp-validation-for="Touro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />&nbsp;
                <a asp-action="Index" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
