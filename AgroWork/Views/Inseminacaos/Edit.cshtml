@model AgroWork.Models.Inseminacao

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Inseminacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProdutorId" class="control-label"></label>
                <select asp-for="ProdutorId" class="form-control" asp-items="ViewBag.ProdutorId"></select>
                <span asp-validation-for="ProdutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacaId" class="control-label"></label>
                <select asp-for="VacaId" class="form-control" asp-items="ViewBag.VacaId"></select>
                <span asp-validation-for="VacaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InseminadorId" class="control-label"></label>
                <select asp-for="InseminadorId" class="form-control" asp-items="ViewBag.InseminadorId"></select>
                <span asp-validation-for="InseminadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" type="datetime-local" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Touro" class="control-label"></label>
                <input asp-for="Touro" class="form-control" />
                <span asp-validation-for="Touro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />&nbsp;
                <a asp-action="Index" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>

    $.validator.methods.range = function (value, element, param) {
        var globalizedValue = value.replace(",", ".");
        return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
    }

    $.validator.methods.number = function (value, element) {
        return this.optional(element) || /-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
    }
    //Date dd/MM/yyyy
    $.validator.methods.date = function (value, element) {
        var date = value.split("/");
        return this.optional(element) || !/Invalid|NaN/.test(new Date(date[2], date[1], date[0]).toString());
    }
</script>
