@model AgroWork.Models.Produtor

@{
    ViewData["Title"] = "Details";
}
<h2>Detalhes</h2>

<div>
    <h4>Produtor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <a asp-area="" asp-controller="Vacas" asp-action="Index">Vacas</a>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <table class="table">
                <tr>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>Raca</th>
                </tr>
                @foreach (var item in Model.Vacas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Idade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Raca)
                        </td>

                    </tr>
                }
            </table>
        </dd>
    </dl>



    <a asp-area="" asp-controller="Inseminacaos" asp-action="Index">Inseminações</a>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <table class="table">
                <tr>
                    <th>Data</th>
                    <th>Nome Vaca</th>
                    <th>Valor</th>
                    <th>Inseminador</th>
                </tr>
                @foreach (var item in Model.Inseminacaos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vaca.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inseminador.Nome)

                        </td>
                    </tr>
                }
                @{
                    double Total = 0.0;

                    foreach (var item in Model.Inseminacaos)
                    {

                        Total = Total + item.Valor;
                    }
                }

            </table>
        </dd>
    </dl>
    <h2>Valor total de Inseminações: @Total R$</h2>
    <hr />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Editar</a> &nbsp;
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</div>
