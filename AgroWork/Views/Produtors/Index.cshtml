@model IEnumerable<AgroWork.Models.Produtor>

@{
    ViewData["Title"] = "Index";
}
<h2>Página Produtores</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Criar um Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Editar</a> &nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default">Detalhes</a> &nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
